# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                            @controllers.HomeController.index

GET         /account/login                               @controllers.AccountController.login()
POST        /account/login                               @controllers.AccountController.postLogin()
GET         /account/register                            @controllers.AccountController.register()
GET         /account/postregister                        @controllers.AccountController.postRegister()

GET         /consultation/search                         @controllers.ConsultationController.search(query:String ?="")
GET         /consultation/:consultationId                @controllers.ConsultationController.getConsultation(consultationId :Long)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                      controllers.Assets.at(path="/public", file)
